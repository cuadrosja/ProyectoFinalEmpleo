<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E9EEF5"
    tools:context=".presentacion.habilidad.RegistroHabilidadActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/navegacion">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:id="@+id/txtTitulo_registro_hab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:text="Añadir Habilidades"
                android:textColor="#333"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre de la Habilidad / Conocimiento"
                android:textColor="#555"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edit_nombre_habilidad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:hint="Ejemplo: Microsoft Excel, Liderazgo, SQL"
                android:background="@android:drawable/edit_text"
                android:padding="12dp"
                android:inputType="text" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:text="Al guardar, esta habilidad se añadirá a tu lista de conocimientos técnicos."
                android:textColor="#777"
                android:textSize="14sp"
                android:fontStyle="italic" />

            <Button
                android:id="@+id/btn_guardar_habilidad"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="GUARDAR"
                android:backgroundTint="#007BFF"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_cancelar_habilidad"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="8dp"
                android:backgroundTint="@color/rojo"
                android:text="CANCELAR"
                android:onClick="onClickSalirHabilidad"
                android:textColor="@color/white"
                android:textStyle="bold" />

        </LinearLayout>
    </ScrollView>

    <include
        android:id="@+id/navegacion"
        layout="@layout/item_navegacion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>