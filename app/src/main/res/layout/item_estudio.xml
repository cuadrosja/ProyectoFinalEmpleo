<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <LinearLayout
            android:id="@+id/ly_info_estudio"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toStartOf="@+id/ly_acciones_estudio"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/txt_grado_estudio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Título Obtenido"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_institucion_estudio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre de la Institución"
                android:textColor="#555555"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@android:drawable/ic_menu_my_calendar"
                    app:tint="#888888" />

                <TextView
                    android:id="@+id/txt_fechas_estudio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:text="2018 - 2023"
                    android:textColor="#888888"
                    android:textSize="13sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/txt_estado_estudio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="#E3F2FD"
                android:paddingHorizontal="8dp"
                android:paddingVertical="2dp"
                android:text="Estado del Estudio"
                android:textColor="#1976D2"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ly_acciones_estudio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageButton
                android:id="@+id/btn_editar_estudio"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/fondo_boton_redondo"
                android:src="@android:drawable/ic_menu_edit"
                android:scaleType="centerInside" />

            <ImageButton
                android:id="@+id/btn_eliminar_estudio"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/fondo_boton_redondo"
                android:src="@android:drawable/ic_menu_delete"
                android:scaleType="centerInside" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>