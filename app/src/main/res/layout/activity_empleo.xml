<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentacion.empleo.EmpleoActivity">

    <EditText
        android:id="@+id/edit_tipo_empleo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/icon_buscar"
        android:hint=" Tipo de empleo"
        android:inputType="text"
        android:padding="12dp"
        android:background="@drawable/fondo_linea"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp" />

    <EditText
        android:id="@+id/edit_ubicacion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/fondo_linea"
        android:drawableStart="@drawable/icon_ubicacion"
        android:hint=" Ubicacion"
        android:inputType="text"
        android:padding="12dp"
        app:layout_constraintEnd_toStartOf="@+id/btn_buscar"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@id/edit_tipo_empleo"
        app:layout_constraintTop_toBottomOf="@id/edit_tipo_empleo" />

    <Button
        android:id="@+id/btn_buscar"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="Buscar"
        android:backgroundTint="#FF00796B"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="@id/edit_ubicacion"
        app:layout_constraintBottom_toBottomOf="@id/edit_ubicacion"
        app:layout_constraintEnd_toEndOf="@id/edit_tipo_empleo" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_empleos"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/btn_buscar"
        app:layout_constraintBottom_toTopOf="@id/layout_paginas"
        app:layout_constraintStart_toStartOf="@id/edit_tipo_empleo"
        app:layout_constraintEnd_toEndOf="@id/edit_tipo_empleo"
        tools:listitem="@layout/item_empleo" />

    <LinearLayout
        android:id="@+id/layout_paginas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@id/navegacion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btn_anterior"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:text="&lt;"
            android:textStyle="bold"
            android:backgroundTint="#E0E0E0"
            android:textColor="#FF00796B" />

        <TextView
            android:id="@+id/txt_pagina_actual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PÃ¡gina 1"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textStyle="bold"
            android:textColor="#FF00796B" />

        <Button
            android:id="@+id/btn_siguiente"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:text="&gt;"
            android:textStyle="bold"
            android:backgroundTint="#E0E0E0"
            android:textColor="#FF00796B" />
    </LinearLayout>

    <include
        android:id="@+id/navegacion"
        layout="@layout/item_navegacion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>