<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E9EEF5"
    tools:context=".presentacion.idioma.RegistroIdiomaActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/navegacion">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:id="@+id/txtTitulo_idioma"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:text="Añadir Idioma"
                android:textColor="#333"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtNombre_idioma"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Idioma"
                android:textColor="#555"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edit_nombre_idioma"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:hint="Ejemplo: Inglés, Portugués, Quechua"
                android:background="@android:drawable/edit_text"
                android:padding="12dp"
                android:inputType="textCapSentences" />

            <TextView
                android:id="@+id/txtNivel_idioma"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nivel de Dominio"
                android:textColor="#555"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spinner_nivel_idioma"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="32dp"
                android:background="@android:drawable/btn_dropdown"
                android:spinnerMode="dropdown" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:text="Selecciona el nivel que mejor represente tu capacidad de hablar y escribir en este idioma."
                android:textColor="#777"
                android:textSize="14sp"
                android:fontStyle="italic" />

            <Button
                android:id="@+id/btn_guardar_idioma"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="GUARDAR"
                android:backgroundTint="#007BFF"
                android:textColor="@color/white"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/btn_cancelar_idioma"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="12dp"
                android:backgroundTint="@color/rojo"
                android:text="CANCELAR"
                android:onClick="onClickSalirIdioma"
                android:textColor="@color/white"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>

    <include
        android:id="@+id/navegacion"
        layout="@layout/item_navegacion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>