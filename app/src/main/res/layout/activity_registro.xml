<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentacion.registroLogin.RegistroActivity">

    <TextView
        android:id="@+id/edit_registrar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Formulario de Registro"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="10dp"
        android:background="@drawable/fondo_linea"
        android:backgroundTint="#FFCAD4"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="32dp" />

    <EditText
        android:id="@+id/edit_nombre"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Nombre:"
        android:padding="10dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/fondo_linea"
        app:layout_constraintTop_toBottomOf="@id/edit_registrar"
        app:layout_constraintStart_toStartOf="@id/edit_registrar"
        app:layout_constraintEnd_toEndOf="@id/edit_registrar"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/edit_apellido"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Apellido:"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/fondo_linea"
        app:layout_constraintTop_toBottomOf="@id/edit_nombre"
        app:layout_constraintStart_toStartOf="@id/edit_nombre"
        app:layout_constraintEnd_toEndOf="@id/edit_nombre"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/edit_email_reg"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Email:"
        android:inputType="textEmailAddress"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/fondo_linea"
        app:layout_constraintTop_toBottomOf="@id/edit_apellido"
        app:layout_constraintStart_toStartOf="@id/edit_apellido"
        app:layout_constraintEnd_toEndOf="@id/edit_apellido" />

    <EditText
        android:id="@+id/edit_telefono"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Teléfono:"
        android:inputType="number"
        android:maxLength="9"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/fondo_linea"
        app:layout_constraintTop_toBottomOf="@id/edit_email_reg"
        app:layout_constraintStart_toStartOf="@id/edit_email_reg"
        app:layout_constraintEnd_toEndOf="@id/edit_email_reg" />

    <EditText
        android:id="@+id/edit_usuario_reg"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Usuario:"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/fondo_linea"
        app:layout_constraintEnd_toEndOf="@id/edit_telefono"
        app:layout_constraintStart_toStartOf="@id/edit_telefono"
        app:layout_constraintTop_toBottomOf="@id/edit_telefono" />

    <EditText
        android:id="@+id/edit_password_reg"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Contraseña:"
        android:inputType="textPassword"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/fondo_linea"
        app:layout_constraintTop_toBottomOf="@id/edit_usuario_reg"
        app:layout_constraintStart_toStartOf="@id/edit_usuario_reg"
        app:layout_constraintEnd_toEndOf="@id/edit_usuario_reg" />

    <Button
        android:id="@+id/btn_adjuntar_cv"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:text="Adjuntar CV"
        android:backgroundTint="#E0E0E0"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toBottomOf="@id/edit_password_reg"
        app:layout_constraintStart_toStartOf="@id/edit_password_reg"
        app:layout_constraintEnd_toStartOf="@+id/btn_adjuntar_foto" />

    <Button
        android:id="@+id/btn_adjuntar_foto"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:text="Adjuntar Foto"
        android:backgroundTint="#E0E0E0"
        android:textColor="@color/black"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@+id/btn_adjuntar_cv"
        app:layout_constraintStart_toEndOf="@+id/btn_adjuntar_cv"
        app:layout_constraintEnd_toEndOf="@id/edit_password_reg" />

    <Button
        android:id="@+id/btn_crear_cuenta"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Crear Cuenta"
        android:onClick="onClickCrearCuenta"
        android:backgroundTint="@color/azul"
        android:textColor="@color/white"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/btn_adjuntar_cv"
        app:layout_constraintStart_toStartOf="@id/edit_password_reg"
        app:layout_constraintEnd_toEndOf="@id/edit_password_reg" />

    <Button
        android:id="@+id/btn_cancelar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Limpiar Registro"
        android:onClick="onClickCancelarRegistro"
        android:backgroundTint="#8E24AA"
        android:textColor="@color/white"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/btn_crear_cuenta"
        app:layout_constraintStart_toStartOf="@id/btn_crear_cuenta"
        app:layout_constraintEnd_toEndOf="@id/btn_crear_cuenta" />

    <include
        android:id="@+id/navegacion"
        layout="@layout/item_navegacion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>