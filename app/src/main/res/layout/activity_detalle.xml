<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F2F5"
    tools:context=".presentacion.detalle.DetalleActivity">

    <TextView
        android:id="@+id/edit_titulo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Oferta de Trabajo"
        android:textSize="22sp"
        android:textStyle="bold"
        android:padding="20dp"
        android:gravity="center"
        android:textColor="#9e5a5a"
        android:background="@drawable/fondo_titulo"
        android:elevation="8dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardContenedor"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="20dp"
        app:cardElevation="12dp"
        app:layout_constraintTop_toBottomOf="@id/edit_titulo"
        app:layout_constraintBottom_toTopOf="@id/layoutBotonesInferiores"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/edit_detalleEmpleo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cargando detalles del empleo..."
                android:textSize="18sp"
                android:lineSpacingExtra="8dp"
                android:padding="24dp"
                android:textColor="#077bf2" />
        </ScrollView>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/layoutBotonesInferiores"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="16dp"
        android:paddingVertical="10dp"
        app:layout_constraintBottom_toTopOf="@id/navegacion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/btn_EmpleoPostulacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <Button
                android:id="@+id/btnPostular"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="Postular Ahora"
                android:onClick="onClickPostular"
                app:icon="@drawable/icon_postular"
                app:iconTint="#2E4053"
                app:iconGravity="textStart"
                app:iconPadding="12dp"/>

            <Button
                android:id="@+id/btnCancelarGuardado"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="Quitar Favorito"
                android:onClick="onClickEliminarFavorito"
                app:icon="@drawable/icon_eliminar" />

            <ImageButton
                android:id="@+id/btnFavorito"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginStart="8dp"
                android:onClick="onClickFavorito"
                android:background="@drawable/fondo_boton_redondo"
                android:src="@drawable/icon_favorito"
                android:contentDescription="Añadir a favoritos"
                app:tint="#F44336" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/btn_MisPostulaciones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp">

            <Button
                android:id="@+id/btnCancelarPostulacion"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Eliminar Postulación"
                android:onClick="onClickEliminarPostulacion"
                app:icon="@drawable/icon_eliminar"
                app:iconTint="#F44336"
                app:iconGravity="textStart"
                app:iconPadding="18dp"/>

            <Button
                android:id="@+id/btnRetrocederAmisPostulaciones"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="8dp"
                android:text="Ver mis Postulaciones"
                android:onClick="onClickRetrocederPostulaciones"
                app:icon="@drawable/icon_detalles"
                app:iconTint="#2E4053"
                app:iconGravity="textStart"
                app:iconPadding="12dp"/>

            <Button
                android:id="@+id/btnRetrocederAmisFavoritos"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="8dp"
                android:text="Ver mis Favoritos"
                android:onClick="onClickRetrocederFavoritos"
                app:icon="@drawable/icon_favorito"
                app:iconTint="#2E4053"
                app:iconGravity="textStart"
                app:iconPadding="12dp" />
        </LinearLayout>
    </LinearLayout>

    <include
        android:id="@+id/navegacion"
        layout="@layout/item_navegacion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>