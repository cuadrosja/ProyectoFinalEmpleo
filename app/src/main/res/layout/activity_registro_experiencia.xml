<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E9EEF5"
    tools:context=".presentacion.experiencia.RegistroExperienciaActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/navegacion">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:id="@+id/txtTitulo_experiencia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:text="AÃ±adir Experiencia"
                android:textColor="#333"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtNombre_empresa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre de la Empresa"
                android:textColor="#555"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/edit_empresa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:hint="Ejemplo:Peru BCP Yape"
                android:background="@android:drawable/edit_text"
                android:padding="12dp"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/txtPuesto_empresa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Puesto / Cargo"
                android:textColor="#555"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/edit_puesto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:hint="Ejemplo: Administrador Contable"
                android:background="@android:drawable/edit_text"
                android:padding="12dp"
                android:inputType="text" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginEnd="8dp">
                    <TextView
                        android:id="@+id/txtFecha_inicio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fecha Inicio"
                        android:textColor="#555"
                        android:textStyle="bold" />
                    <EditText
                        android:id="@+id/edit_fecha_inicio"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:drawable/edit_text"
                        android:padding="12dp"
                        android:hint="AAAA-MM-DD"
                        android:inputType="date" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/txtFecha_fin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fecha Fin"
                        android:textColor="#555"
                        android:textStyle="bold" />
                    <EditText
                        android:id="@+id/edit_fecha_fin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:drawable/edit_text"
                        android:padding="12dp"
                        android:hint="AAAA-MM-DD"
                        android:inputType="date" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/txtDescripcion_tareas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Funciones y tareas del Cargo"
                android:textColor="#555"
                android:textStyle="bold"
                android:layout_marginTop="16dp"/>
            <EditText
                android:id="@+id/edit_descripcion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:hint="Ejemplo: Amplia experiencia en el area financiero de credito"
                android:background="@android:drawable/edit_text"
                android:padding="12dp"
                android:gravity="top"
                android:lines="4"
                android:inputType="textMultiLine" />

            <Button
                android:id="@+id/btn_guardar_experiencia"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="GUARDAR"
                android:backgroundTint="#007BFF"
                android:textColor="@color/white"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/btn_cancelar_experiencia"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:backgroundTint="@color/rojo"
                android:text="CANCELAR"
                android:onClick="onClickSalirExpLaboral"
                android:textColor="@color/white"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>

    <include
        android:id="@+id/navegacion"
        layout="@layout/item_navegacion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>